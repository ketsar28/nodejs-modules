<div class="container my-5">
  <div class="row">
    <div class="col-md-6">
      <form action="/contacts/update" method="post">
        <legend>Edit Data</legend>

        <% if(typeof errors != 'undefined') { %>
        <div class="alert alert-danger" id="msg" role="alert">
          <ul>
            <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
            <% }) %>
          </ul>
        </div>
        <% } %>

        <input type="hidden" name="oldNama" value="<%= (contact.oldNama)? contact.oldNama : contact.nama %>" />
        <div class="mb-3">
          <label for="username" class="form-label">Username :</label>
          <input type="text" id="username" name="nama" class="form-control" placeholder="Masukan Username Anda" value="<%= contact.nama %>" />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email :</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Masukan Email Anda" value="<%= contact.email %>" />
        </div>
        <div class="mb-3">
          <label for="telp" class="form-label">No Telepon :</label>
          <input type="telp" id="telp" name="telp" class="form-control" placeholder="Masukan Nomor Telepon" value="<%= contact.telp %>" />
        </div>
        <button type="submit" class="btn btn-primary">Kirim</button>
      </form>
    </div>
  </div>
</div>
