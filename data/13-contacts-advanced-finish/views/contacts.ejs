<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <h2 class="text-light fw-bold">Halaman Contact</h2>

      <button type="submit" class="btn btn-primary fw-bold my-3"><a href="./add" class="text-decoration-none text-light">Tambah Data Contact</a></button>

      <% if (msg.length !== 0) { %>
      <div class="alert alert-success fw-bold" id="msg" role="alert"><%= msg %> !</div>
      <% } %>

      <table class="table table-success table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">E-mail</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger fw-bold" role="alert">Contact Masih Kosong Silahkan Masukan Terlebih Dahulu!</div>
            </td>
          </tr>
          <% } else { %> <% contacts.forEach((contact, i) => { i++ %>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.email %></td>
            <td><a href="/contacts/<%= contact.nama %>" class="btn btn-success badge rounded-pill"> detail</a></td>
          </tr>
          <% }) %> <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
